generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



enum Sender {
  USER
  CAFE
}

model User {
  id String @id @default(cuid())
  name String
  email String @unique
  imageUrl String
  clerkId String @unique
  cafes Cafe[]
  messages Message[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cafe {
  id String @id @default(cuid())
  clerkId String
  user User @relation(fields: [clerkId], references: [clerkId], onDelete: Cascade)
  name String
  messages Message[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id String @id @default(cuid())
  clerkId String
  user User @relation(fields: [clerkId], references: [clerkId], onDelete: Cascade)
  cafeId String
  cafe Cafe @relation(fields: [cafeId], references: [id], onDelete: Cascade)
  content String
  imageUrl String?
  sender Sender @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
